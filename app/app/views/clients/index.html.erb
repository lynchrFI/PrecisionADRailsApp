<h1> <%= current_user.name %>'s Clients </h1>

<%= form_tag search_path, method: 'get' do %>
    <%= label_tag "Search by name" %>
    <%= text_field_tag :name, params[:name] %>
    <%= submit_tag "Search" %>
<% end %>

<ul>
<% @clients.all.uniq.each do |c| %>
    <li> <%= link_to c.name, client_path(c) %> </li>
<% end %>
</ul>