<%= form_with model: @client, local: true do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :phone_number %>
    <%= f.number_field :phone_number %> 
    <br>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <br>
    <%= f.label :vehicle_year %>
    <%= f.number_field :vehicle_year %>
    <br>
    <br>
    <%= f.label :make %>
    <%= f.text_field :make%>
    <br>
    <br>
    <%= f.label :model%>
    <%= f.text_field :model %>
    <br>
        <%= f.fields_for :appointments do |a| %>

            <%= a.hidden_field :user_id, value: current_user.id %> 

            <%= a.label :appointment_time %>
            <%= a.datetime_field :appointment_time %>
            <br>
            <br>
        <% end %>
    <%= f.submit %>

    <% end %>